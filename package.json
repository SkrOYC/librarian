{
  "name": "@skroyc/librarian",
  "version": "0.3.0",
  "description": "Librarian CLI - Technology Research Agent",
  "main": "./dist/index.js",
  "bin": {
    "librarian": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "type": "module",
  "scripts": {
    "prepublishOnly": "npm run build:dev",
    "build": "bun build --outfile librarian --target bun ./src/cli.ts",
    "build:dev": "tsc",
    "test": "bun test tests/",
    "test:watch": "bun test --watch tests/",
    "lint": "eslint src --ext .ts",
    "start": "bun dist/index.js",
    "cli": "bun dist/cli.js",
    "postinstall": "bunx bun2nix -o bun.nix"
  },
  "keywords": [
    "cli",
    "research",
    "ai",
    "typescript",
    "langchain",
    "git"
  ],
  "author": "Oscar",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/SkrOYC/librarian.git"
  },
  "homepage": "https://github.com/SkrOYC/librarian#readme",
  "bugs": {
    "url": "https://github.com/SkrOYC/librarian/issues"
  },
  "dependencies": {
    "@langchain/anthropic": "^1.3.2",
    "@langchain/core": "^1.1.7",
    "@langchain/google-genai": "^2.1.2",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/openai": "^1.2.0",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "isomorphic-git": "^1.36.1",
    "langchain": "^1.2.2",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "bun-types": "^1.3.5",
    "bun2nix": "^2.0.6",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11"
  }
}